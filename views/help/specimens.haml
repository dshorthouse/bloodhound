-content_for :title do
  Help Fix Attributions for #{@viewed_user.fullname}

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init(#{@viewed_user.id}, "PUT", "/help-others", "#{@viewed_user.identifier}");
    });

-content_for :jumbotron do
  = haml :'partials/help/jumbotron', layout: false

= haml :'partials/help/tabs', layout: false, locals: { active_tab: "specimens" }
= haml :'partials/help/subtabs_fix', layout: false, locals: { active_subtab: "specimens" }

- if @pagy.count == 0 && !@filter.nil?
  %div{class: "alert alert-warning", role: "alert"}
    %i{class:"fas fa-filter"}
    Filtered by
    %span{class:"font-weight-bold mr-2"}
      #{@filter[:value]}
    %a{href: "/help-others/#{@viewed_user.identifier}/specimens"}
      Remove
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    Bloodhound trainers have not yet helped attribute specimens under this filter.
- elsif @pagy.count == 0 && @filter.nil?
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    Bloodhound trainers have not yet helped attribute specimens.
- else
  - if !@filter.nil?
    %div{class: "alert alert-warning", role: "alert"}
      %i{class:"fas fa-filter"}
      Filtered by
      %span{class:"font-weight-bold mr-2"}
        #{@filter[:value]}
      %a{href: "/help-others/#{@viewed_user.identifier}/specimens"}
        Remove

  = haml :'partials/help/fixed_navbar', layout: false
  %div{id: "helper-info", class: "alert alert-info tiny-margins", role: "alert"}
    Choose
    %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
    collected,
    %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
    identified, or Both to correct the claims.

  %div{class:"table-responsive-lg"}
    %table{class:"table table-hover table-sm"}
      %thead{class: "thead-light"}
        %tr
          %th{scope: "col", class:"selector"}
            = haml :'partials/bulk_selector_top', layout: false
          %th{scope: "col"} Scientific Name
          %th{scope: "col"} Collected By
          %th{scope: "col"} Identified By
          %th{scope: "col"} Date Collected
          %th{scope: "col"} Date Identified
          %th{scope: "col"} Institution
          %th{scope: "col"} Catalog Number
          %th{scope: "col"} Type Status
          %th{scope: "col"} Trainer
          %th{scope: "col", class:"btn-selector-wide"}

      %tbody
        - @results.each do |uo|
          - o = uo.occurrence
          %tr
            %td{class: "selector"}
              = haml :'partials/single_selector_preselected', layout: false, locals: { occurrence: uo }
            %td
              - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
              %a{href: "https://gbif.org/occurrence/#{o.id}", target:"_blank"} #{h(scientific_name)}
            %td #{h(o.recordedBy)}
            %td #{h(o.identifiedBy)}
            %td #{h(o.eventDate || o.year)}
            %td #{h(o.dateIdentified)}
            %td #{h(o.institutionCode)}
            %td #{h(o.catalogNumber)}
            %td #{h(o.typeStatus)}
            %td
              - if uo.claimant.is_bot?
                #{uo.claimant.fullname}
              - elsif uo.claimant.is_public?
                %a{href: "/#{uo.claimant.orcid}"} #{uo.claimant.fullname_reverse}
              - else
                %a{href: "https://orcid.org/#{uo.claimant.orcid}"} #{uo.claimant.fullname_reverse}
            %td
              %button{type:"button", class:"btn btn-sm btn-outline-warning hide", "data-occurrence-id":"#{uo.user_occurrence_id}"} Not them

      - if @total > 25
        %tfoot{class: "thead-light"}
          %tr
            %th{scope: "col", class:"selector"}
              = haml :'partials/bulk_selector_bottom', layout: false
            %th{scope: "col"} Scientific Name
            %th{scope: "col"} Collected By
            %th{scope: "col"} Identified By
            %th{scope: "col"} Date Collected
            %th{scope: "col"} Date Identified
            %th{scope: "col"} Institution
            %th{scope: "col"} Catalog Number
            %th{scope: "col"} Type Status
            %th{scope: "col"} Helper
            %th

  - if @total > 25
    = haml :'partials/page_size', layout: false

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
