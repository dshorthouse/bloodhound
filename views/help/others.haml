-content_for :title do
  Help Users

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/help-others");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap alert-warning-light"}
    %div{class: "mr-auto p-2"}
      %h2 Help Attribute Specimens
      %P{class:"lead text-muted"} Join the trainers in acknowledging your peers, mentors, or anyone who inspires you
    = haml :'partials/help_others_search', layout: false

- if @results.empty? && params[:q] && !params[:q].empty?
  %div{class: "alert alert-warning tiny-margins", role: "alert"}
    No one found by the name
    = succeed "." do
      %span{class: "font-weight-bold"}
        #{h(params[:q])}
    See the
    %a{href: "/help-others/help"} Help
    tab for suggestions.

- if @results.empty? || params[:q].nil?

  %ul{class: "nav nav-tabs pl-2"}
    %li{class: "nav-item"}
      %a{class: "nav-link active", href: "/help-others"} By Country
    %li{class: "nav-item"}
      %a{class: "nav-link", href: "/help-others/new-people"} New People
    %li{class: "nav-item"}
      %a{class: "nav-link", href: "/help-others/progress"} Latest Recipients
    %li{class: "nav-item"}
      %a{class: "nav-link", href: "/help-others/help"} Help / Add

  = haml :'partials/help_others_countries', layout: false

- else
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    #{@pagy.count} search results for
    %span{class: "font-weight-bold"} #{h(params[:q])}

  %div
    - @results.in_groups_of(3).each do |group|
      %div{class: "card-deck"}
        - group.each do |user|
          - if user.nil?
            %div{class:"card", style:"border:0px"}
          - else
            = haml :'partials/user_card_dynamic', layout: false, locals: { user: User.find(user[:_id]), path: "help-others" }

    = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1