-content_for :title do
  Bloodhound: Help Users

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid"}
    %div{class: "container-fluid"}

      %h2{class:"display-4 text-center"} Help Claim Specimens
      = haml :'partials/help_others_search', layout: false

- if @results.empty? && params[:q] && !params[:q].empty?
  %div{class: "alert alert-danger", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    No one found by the name
    %span{class: "font-weight-bold"}
      :escaped
        #{params[:q]}

- if @results.empty? || params[:q].nil?
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Is the person you're looking for not here? Ask them to register an 
    %a{href: "https://orcid.org/register"} ORCID account
    and make their name publicly available. If they additionally assign one of the keywords 
    %span{class: "font-italic"} #{Sinatra::Application.settings.orcid_keywords.join(", ")},
    to their ORCID account, Bloodhound will find them and add them by the following day.
  %h2{class:"mb-4"} Browse by Collectors' or Determiners' Country
  = haml :'partials/help_others_countries', layout: false

- else
  %div{class:"container-fluid"}
    - @results.in_groups_of(3).each do |group|
      %div{class: "row"}
        - group.each do |user|
          %div{class: "col-sm"}
            - if !user.nil?
              - u = User.find(user[:_id])
              %div{class: "card", style:"margin:20px"}
                %div{class: "card-header"}
                  %h5
                    %a{href: "/help-others/#{u.identifier}"} #{u.fullname_reverse}
                  - if u.wikidata
                    %span{class:"small text-muted"}= format_lifespan(u)
                %div{class: "card-body"}
                  %div{class: "row"}
                    %div{class: "col small text-left text-muted"} #{u.country}
                    %div{class: "col small text-right text-muted"}
                      %span{class:"badge badge-success"} #{number_with_delimiter(u.all_occurrences_count)}
                      specimens

    = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1