-content_for :title do
  New People

- content_for :scripts do
  %script{src: "/js/application.js"}
  %script{src: "/js/progress-bar.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/help-others");
      $('.progress-bar').each(function() {
        ProgressBar.init($(this).attr("id").split("_").pop());
      });
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap alert-warning-light"}
    %div{class: "mr-auto p-2"}
      %h2 Help Claim Specimens for Recently Found People
    = haml :'partials/help_others_search', layout: false

%ul{class: "nav nav-tabs pl-2"}
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others"} By Country
  %li{class: "nav-item"}
    %a{class: "nav-link active", href: "/help-others/new-people"} New People
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others/progress"} Latest Recipients
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others/help"} Help / Add

%div{class:"container-fluid"}
  %nav{id:"network-nav", class:"navbar navbar-light navbar-expand bg-light"}
    %ul{class:"navbar-nav"}
      %li{class:"nav-item"}
        %a{class:"nav-link#{locals[:active_tab] == "orcid" ? " active" : nil}", href:"/help-others/new-people"} ORCID
      %li{class:"nav-item"}
        %a{class:"nav-link#{locals[:active_tab] == "wikidata" ? " active" : nil}", href:"/help-others/new-people/wikidata"} Wikidata

%div{class:"table-responsive-lg mt-4"}
  %table{class:"table table-hover table-sm"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"} Person
        %th{scope: "col"} Claim Progress
        %th{scope: "col"} Public Account?
        %th{scope: "col"} Profile Created

    %tbody
      - @results.each do |user|
        %tr
          %td
            %a{href: "/help-others/#{user.identifier}"}
            - if user.orcid
              %img{src: "/images/orcid_16x16.png", alt:"ORCID iD"}
            - else
              %img{src: "/images/wikidata_16x16.png", alt:"Wikidata iD"}
            %a{href: "/help-others/#{user.identifier}"} #{user.fullname_reverse}
          %td
            %div{class:"progress", style:"border:1px solid rgba(0,0,0,.125);inline"}
              %div{id:"progress-bar_#{user.identifier}", class:"progress-bar bg-info", role:"progressbar", style:"width: 0%;inline", "aria-valuenow":"0", "aria-valuemin":"0", "aria-valuemax":"100"}
          %td
            - if user.is_public?
              %span{class: "text-success"} #{user.is_public}
            - else
              #{user.is_public}
          %td
            #{user.created}

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1