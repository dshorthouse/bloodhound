-content_for :title do
  New People

- content_for :scripts do
  %script{src: "/js/application.js"}
  %script{src: "/js/progress-bar.js"}
  :javascript
    $(function() {
      var ids = $.map($('.progress-bar'), function(obj) { return $(obj).attr("id").split("_").pop(); });
      Application.init("", "GET", "/help-others");
      $.when.apply($, $.each(ids, function(key, id) { ProgressBar.init(id); }));
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap alert-warning-light"}
    %div{class: "mr-auto p-2"}
      %h1{class:"h2"} Newly Found People
      %p{class:"lead text-muted"}
        Attribute specimens for recently discovered people in
        %a{href:"https://orcid.org"} ORCID
        or
        %a{href: "https://www.wikidata.org"} Wikidata
    = haml :'partials/help/search', layout: false

%ul{class: "nav nav-tabs pl-2"}
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others"} By Country
  %li{class: "nav-item"}
    %a{class: "nav-link active", href: "/help-others/new-people"} New People
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others/progress"} Latest Recipients
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others/help"} Help / Add

%div
  %nav{id:"network-nav", class:"navbar navbar-light navbar-expand bg-light overflow-auto"}
    %ul{class:"navbar-nav"}
      %li{class:"nav-item"}
        %a{class:"nav-link#{locals[:active_tab] == "orcid" ? " active" : nil}", href:"/help-others/new-people"} ORCID
      %li{class:"nav-item"}
        %a{class:"nav-link#{locals[:active_tab] == "wikidata" ? " active" : nil}", href:"/help-others/new-people/wikidata"} Wikidata

%div{class:"table-responsive-lg mt-4"}
  %table{class:"table table-hover table-sm"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"} Person
        %th{scope: "col"} Progress
        %th{scope: "col"} Public
        %th{scope: "col"} Created

    %tbody
      - @results.each do |user|
        %tr
          %td
            - if user.orcid
              %i{class:"fab fa-orcid"}
            - else
              %img{src: "/images/wikidata_16x16.png", alt:"Wikidata iD"}
            %a{href: "/help-others/#{user.identifier}"} #{user.fullname_reverse}
          %td
            %div{class:"progress progress-border"}
              %div{id:"progress-bar_#{user.identifier}", class:"progress-bar bg-info", role:"progressbar", style:"width: 0%;", "aria-valuenow":"0", "aria-valuemin":"0", "aria-valuemax":"100"}
          %td
            - if user.is_public?
              %span{class: "text-success"} #{user.is_public}
            - else
              #{user.is_public}
          %td
            #{user.created}

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
