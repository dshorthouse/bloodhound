-content_for :title do
  Help Progress

- content_for :scripts do
  %script{src: "/js/application.js"}
  %script{src: "/js/progress-bar.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/help-others");
      $('.progress-bar').each(function() {
        ProgressBar.init($(this).attr("id").split("_").pop());
      });
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap alert-warning-light"}
    %div{class: "mr-auto p-2"}
      %h1{class:"h2"} Latest Recipients
      %p{class:"lead text-muted"} Join the trainers by helping to attribute specimens
    = haml :'partials/help_others_search', layout: false

%ul{class: "nav nav-tabs pl-2"}
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others"} By Country
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others/new-people"} New People
  %li{class: "nav-item"}
    %a{class: "nav-link active", href: "/help-others/progress"} Latest Recipients
  %li{class: "nav-item"}
    %a{class: "nav-link", href: "/help-others/help"} Help / Add

%div
  %nav{id:"network-nav", class:"navbar navbar-light navbar-expand bg-light"}
    %ul{class:"navbar-nav"}
      %li{class:"nav-item"}
        %a{class:"nav-link#{locals[:active_tab] == "orcid" ? " active" : nil}", href:"/help-others/progress"} ORCID
      %li{class:"nav-item"}
        %a{class:"nav-link#{locals[:active_tab] == "wikidata" ? " active" : nil}", href:"/help-others/progress/wikidata"} Wikidata

%div{class:"table-responsive-lg mt-4"}
  %table{class:"table table-hover table-sm"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"} Person
        %th{scope: "col"} Progress
        %th{scope: "col"} Public
        %th{scope: "col"} Latest Trainer
        %th{scope: "col"} Latest Claim

    %tbody
      - @results.each do |claim|
        %tr
          %td
            - if claim.user.orcid
              %i{class:"fab fa-orcid"}
            - else
              %img{src: "/images/wikidata_16x16.png", alt:"Wikidata iD"}
            %a{href: "/help-others/#{claim.user.identifier}"} #{claim.user.fullname_reverse}
          %td
            %div{class:"progress", style:"border:1px solid rgba(0,0,0,.125);inline"}
              %div{id:"progress-bar_#{claim.user.identifier}", class:"progress-bar bg-info", role:"progressbar", style:"width: 0%;inline", "aria-valuenow":"0", "aria-valuemin":"0", "aria-valuemax":"100"}
          %td
            - if claim.user.is_public?
              %span{class: "text-success"} #{claim.user.is_public}
            - else
              #{claim.user.is_public}
          %td
            - if claim.claimant.is_bot?
              #{claim.claimant.fullname}
            - else
              %a{href: "/#{claim.claimant.orcid}"} #{claim.claimant.fullname_reverse}
          %td
            #{claim.created}

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1