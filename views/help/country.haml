-content_for :title do
  Bloodhound: Help Users from #{@country.name}

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid"}
    %div{class: "container-fluid"}

      %h2{class:"display-4 text-center"} #{@country.name}
      = haml :'partials/help_others_search', layout: false

- if @results.empty?
  %div{class: "alert alert-danger", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    No one found from
    %span{class: "font-weight-bold"} #{@country.name}

- else
  %div{class:"container-fluid"}
    - @results.in_groups_of(3).each do |group|
      %div{class: "row"}
        - group.each do |user|
          %div{class: "col-sm"}
            - if !user.nil?
              %div{class: "card", style:"margin:20px"}
                %div{class:"card-header"}
                  %h5
                    %a{href: "/help-others/#{user.identifier}"} #{user.fullname_reverse}
                  - if user.wikidata
                    %span{class:"small text-muted"}= format_lifespan(user)
                %div{class: "card-body"}
                  %div{class: "row"}
                    %div{class: "col small text-left text-muted"}
                      - if user.country
                        #{user.country.split("|").join("; ")}
                    %div{class: "col small text-right text-muted"}
                      %span{class:"badge badge-success"} #{number_with_delimiter(user.all_occurrences_count)}
                      specimens
  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1