-content_for :title do
  Trainers

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h2 Trainers
      %p.lead.text-muted
        Users who have helped their peers, mentors, and role models claim specimens

%div{class:"container-fluid"}
  - if authorized?
    %p
      %a{ href:"/help-others", role:"button", class:"btn btn-lg btn-outline-success" } Help Others
  - @results.to_a.in_groups_of(3).each do |group|
    %div{class: "row"}
      - group.each do |u|
        %div{class: "col-sm"}
          - if !u.nil?
            - user = User.find(u[0])
            %div{class: "card my-3"}
              %div{class: "card-header"}
                %h5
                  %a{href: "/#{user.identifier}"} #{user.fullname_reverse}
              %div{class: "card-body"}
                - if user.country
                  %p{class:"small text-muted mt-0 mb-0"} #{user.country.split("|").join("; ")}
                %div{class: "d-flex mt-4"}
                  %div{class: "small text-right text-muted mr-2"}
                    %i{class:"fas fa-users text-success"}
                    #{number_with_delimiter(u[2])} people helped
                  %div{class: "small text-left text-muted mr-2"}
                    %span{class:"badge badge-success"} #{number_with_delimiter(u[1])}
                    #{'specimen'.pluralize(u[1])} claimed