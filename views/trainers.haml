-content_for :title do
  Trainers

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h2 Trainers
      %p.lead.text-muted
        Users who have helped their peers, mentors, and role models claim specimens

- @results.in_groups_of(3).each do |group|
  %div{class: "card-deck"}
    - group.each do |u|
      - if u.nil?
        %div{class:"card", style:"border:0px"}
      - else
        - cache_fragment(u.identifier + "-trainer") do
          %div{class: "card card-profile my-3"}
            - if u.image_url
              %div{class: "card-header d-flex"}
                %div
                  %img{src:"#{profile_image(u, 'medium')}", alt:"#{u.fullname}", class:"card-img-profile mr-2"}
                %div{class:"flex-grow-1"}
                  %h5
                    %a{href: "/#{u.identifier}"} #{u.fullname_reverse}
                  - if u.country
                    %p{class:"small text-muted mt-0 mb-0"} #{u.country.split("|").join("; ")}
            - else
              %div{class: "card-header"}
                %h5
                  %a{href: "/#{u.identifier}"} #{u.fullname_reverse}
                - if u.country
                  %p{class:"small text-muted mt-0 mb-0"} #{u.country.split("|").join("; ")}

            %div{class: "card-body"}

            %div{class: "card-footer d-flex"}
              %div{class: "small text-muted"}
                Attributed
                %span{class:"badge badge-success"} #{number_with_delimiter(u.claims_given.count)}
                #{'specimen'.pluralize(u.claims_given.count)}
                to
                %span{class:"badge badge-light"} #{number_with_delimiter(u.helped_count)}
                #{'person'.pluralize(u.helped_count)}
                

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1