-content_for :title do
  Bloodhound: Candidate Specimens

-content_for :stylesheets do
  %link{href: "/css/typeahead.css", rel: "stylesheet", type: "text/css"}

-content_for :scripts do
  %script{src: "/js/typeahead.bundle.min.js"}
  %script{src: "/js/candidates.js"}
  :javascript
    $(function() {
      Candidates.init(#{@admin_user.id}, "/admin");
    });

-content_for :jumbotron do
  %div{class: "jumbotron"}
    %div{class:"container-fluid"}
      %h2{class:"display-4 text-left"}#{@admin_user.fullname}'s Candidate Specimens

- if @results.empty?
  %div{class: "alert alert-warning", role:"alert"}
    Bloodhound did not sniff any specimens indexed by the 
    %a{href: "https://www.gbif.org"} Global Biodiversity Information Facility
    (GBIF).
- else
  %div{class: "alert alert-info", role: "alert"}
    Bloodhound sniffed #{number_with_delimiter(@total, delimeter: ",")} specimens. Choose
    %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18} 
    collected, 
    %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
    identified, or Both.

  %table{class:"table table-hover"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"}
          %div.bulk-label Bulk Assignment
          %div{class:"btn-group btn-group-toggle", "data-toggle":"buttons"}
            %label{class:"btn btn-choice btn-dark"}
              %input{type:"radio", name:"selection-all", class:"specimen-selector", "data-action": "recorded", autocomplete:"off"}
                %img{src:"/images/net.png", alt:"Collected All", title:"Collected All", width:18}
            %label{class:"btn  btn-choice btn-dark"}
              %input{type:"radio", name:"selection-all",  class:"specimen-selector", "data-action": "identified", autocomplete:"off"}
                %img{src:"/images/microscope.png", alt:"Identified All", title: "Identified All",width:18}
            %label{class:"btn  btn-choice btn-dark"}
              %input{type:"radio", name:"selection-all",  class:"specimen-selector", "data-action": "recorded,identified", autocomplete:"off"} Both
        %th{scope: "col"} Scientific Name
        %th{scope: "col"} Collected By
        %th{scope: "col"} Identified By
        %th{scope: "col"} Date Collected
        %th{scope: "col"} Date Identified
        %th{scope: "col"} Institution
        %th{scope: "col"} Catalog Number
        %th{scope: "col"} Type Status
        %th{scope: "col"}
          %button{type:"button", name:"notme-all", class:"btn btn-warning remove-all", "data-occurrence-ids":"#{@results.map(&:id).join(",")}"} Hide

    %tbody
      - @results.each do |o|
        %tr
          %td
            %div{class:"btn-group btn-group-toggle", "data-toggle":"buttons"}
              %label{class:"btn btn-choice btn-light"}
                %input{type:"radio", name:"selection-#{o.id}",  class:"specimen-selector", "data-occurrence-id":"#{o.id}", "data-action": "recorded", autocomplete:"off"}
                  %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
              %label{class:"btn  btn-choice btn-light"}
                %input{type:"radio", name:"selection-#{o.id}",  class:"specimen-selector", "data-occurrence-id":"#{o.id}", "data-action": "identified", autocomplete:"off"}
                  %img{src:"/images/microscope-unselected.png", alt:"Identified", title: "Identified",width:18}
              %label{class:"btn  btn-choice btn-light"}
                %input{type:"radio", name:"selection-#{o.id}",  class:"specimen-selector", "data-occurrence-id":"#{o.id}", "data-action": "recorded,identified", autocomplete:"off"} Both
          %td
            - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
            %a{href: "https://www.gbif.org/occurrence/#{o.id}", target: "_blank" } #{scientific_name}
          %td #{o.recordedBy}
          %td #{o.identifiedBy}
          %td #{o.eventDate}
          %td #{o.dateIdentified}
          %td #{o.institutionCode}
          %td #{o.catalogNumber}
          %td #{o.typeStatus}
          %td
            %button{type:"button", class:"btn btn-outline-warning remove", "data-occurrence-id":"#{o.id}"} Hide

  - if @total >= 25
    %div{class: "btn-group", style:"margin-bottom:3px"}
      %button{class:"btn btn-light btn-sm dropdown-toggle", type:"button", "data-toggle":"dropdown", "aria-haspopup":"true", "aria-expanded":"false"} Per page
      %div{class:"dropdown-menu", "aria-labelledby":"dropdownMenuButton"}
        %a{href: "?page=#{@page}&per=25", class: "dropdown-item"} 25
        %a{href: "?page=#{@page}&per=100", class: "dropdown-item"} 100
        %a{href: "?page=#{@page}&per=250", class: "dropdown-item"} 250
                
  = will_paginate @results, { class: "pagination" }