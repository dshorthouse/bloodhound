-content_for :title do
  #{@admin_user.fullname} Candidate Specimens

-content_for :scripts do
  %script{src:"/js/application.js"}
  :javascript
    $(function() {
      var BULK_ERROR_MESSAGE = "#{locals[:bulk_error]}";
      Application.init(#{@admin_user.id}, "POST", "/admin");
      if (BULK_ERROR_MESSAGE) {
        $("#bot_claims").modal("show");
      }
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning"}
    %div{class:"row"}
      %div{class:"col-12 col-lg-4 alert-warning mb-2"}
        %h1{class:"h3"}= @admin_user.fullname
      %div{class:"col-12 col-lg-8 mt-2"}
        = haml :'partials/admin_user_tabs', layout: false, locals: { active_page: "candidates" }

- alert_class = "info"
- placeholder = @admin_user.fullname
- if !@searched_user.nil?
  - alert_class = "warning"
  - placeholder = @searched_user.fullname

- if !@searched_user.nil?
  = haml :'partials/admin_bot_claim_modal', layout: false, locals: { user: @admin_user, agent: @searched_user, bulk_error: "#{locals[:bulk_error]}" }

- if @results.empty?
  %div{class: "alert alert-info row tiny-margins", role:"alert"}
    %div{class: "col col-12 col-sm-12 col-m-8 col-lg-8"}
      Bloodhound did not sniff any specimens indexed by the Global Biodiversity Information Facility (GBIF) that were collected or identified.

      %div{class:"form-check d-inline-flex"}
        - checked = params[:relaxed] == "1" ? "checked" : nil
        %input{type:"checkbox", class:"form-check-input", id:"relaxed", checked: checked }
        %label{for:"relaxed", class:"relaxed"} Make less exact
    %div{class:"col col-12 col-sm-8 col-m-6 col-lg-4"}
      %form{id:"#form-wrapper", method: "get", action: "/", "accept-charset" => "UTF-8", class: "form-inline"}
        %div{class: "inputs search-agent form-group"}
          %label{for: "typeahead"}= "Search"
          %input.typeahead{id: "typeahead-agent", type: :text, name: "q", placeholder: "#{placeholder}", value: "#{params[:q]}"}
- else
  = haml :'partials/admin_fixed_navbar', layout: false
  %div{id: "helper-info", class: "alert alert-#{alert_class} row candidates-alert tiny-margins", role: "alert"}
    %div{class: "col col-12 col-sm-12 col-m-8 col-lg-8"}
      = succeed "." do
        Bloodhound sniffed #{number_with_delimiter(@total, delimeter: ",")} specimens for
        %span{class:"font-weight-bold"} #{placeholder}
      - if !@searched_user.nil?
        = succeed "." do
          Attribute with
          %a{href: "#", "data-toggle":"modal", "data-target":"#bot_claims"} Bloodhound Bot

      %br
      Choose
      %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
      collected,
      %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
      identified, or Both.
      - if @searched_user.nil?
        %div{class:"form-check d-inline-flex"}
          - checked = params[:relaxed] == "1" ? "checked" : nil
          %input{type:"checkbox", class:"form-check-input", id:"relaxed", checked: checked }
          %label{for:"relaxed", class:"relaxed"} Make less exact

    %div{class:"col col-12 col-sm-8 col-m-6 col-lg-4"}
      %form{id:"#form-wrapper", method: "get", action: "/", "accept-charset" => "UTF-8", class: "form-inline"}
        %div{class: "inputs search-agent form-group"}
          %label{for: "typeahead", class:"font-weight-bold col-form-label", style:"margin-right:1rem"}= "Search"
          %input.typeahead{id: "typeahead-agent", type: :text, name: "q", placeholder: "#{placeholder}", value: "#{params[:q]}"}

  = haml :'partials/tables/candidates', layout: false
