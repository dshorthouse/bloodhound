-content_for :title do
  Organizations

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning d-flex flex-wrap"}
    %div{class:"mr-auto"}
      %h2 Organizations
    = haml :'partials/admin_organization_search', layout: false

%div{class:"container-fluid"}
  - if @results.empty?
    %div{class: "alert alert-info tiny-margins", role: "alert"}
      No organizations found.
  - else
    - @results.in_groups_of(3).each do |group|
      %div{class: "card-deck"}
        - group.each do |o|
          - if o.nil?
            %div{class:"card", style:"border:0px"}
          - else
            - org = Organization.find(o[:_id].to_i)
            - if !o.nil?
              %div{class: "card", style:"margin:20px"}
                %h5{class: "card-header"}
                  %a{href: "/admin/organization/#{org.id}"} #{org.name}
                %div{class: "card-body"}
                  %p{class:"card-text",style:"margin-top:5px;"}
                    #{org.address}
                %div{class: "card-footer"}
                  %div{class: "col small text-left text-muted"}
                  %div{class: "col small text-right text-muted"}
                    - count = org.active_users.count
                    - color = count == 0 ? "light" : "success"
                    %span{class:"badge badge-#{color}"} #{number_with_delimiter(count)}
                    #{'member'.pluralize(count)}


    = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1