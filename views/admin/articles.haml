-content_for :title do
  Articles

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning"}
    %h2 Articles

%p{class:"text-right"}
  %a{href: "https://www.gbif.org/resource/search?contentType=literature&relevance=GBIF_USED"}
    View latest
  listing on GBIF

- if @results.empty?
  %div{class: "alert alert-warning", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Articles have not yet been recorded.
-else

  %div{class:"table-responsive-lg"}
    %table{class:"table table-hover table-sm"}
      %thead{class: "thead-light"}
        %tr
          %th{scope: "col"} Article
          %th{scope: "col"} DOI
          %th{scope: "col"} Processed
          %th{scope: "col"} Created

      %tbody
        - @results.each do |article|
          %tr
            %td 
              %a{href: "/admin/article/#{article.id}"} #{article.citation[0..120].gsub(/\s\w+\s*$/,'...')}
            %td
              %a{href: "https://doi.org/#{article.doi}"} #{article.doi}
            %td
              - if article.processed
                %span{class: "text-success"} #{article.processed}
              - else
                false
            %td #{article.created}

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1