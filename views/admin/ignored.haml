-content_for :title do
  #{@admin_user.fullname} Ignored Specimens

-content_for :scripts do
  %script{src:"/js/application.js"}
  :javascript
    $(function() {
      Application.init(#{@admin_user.id}, "PUT", "/admin");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning"}
    %div{class:"row"}
      %div{class:"col-12 col-lg-4 alert-warning mb-2"}
        %h1{class:"h3"}= @admin_user.fullname
      %div{class:"col-12 col-lg-8 mt-2"}
        = haml :'partials/admin_user_tabs', layout: false, locals: { active_page: "ignored" }

- if @results.empty?
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    Specimens have not been ignored.

- else
  = haml :'partials/admin_fixed_navbar', layout: false
  %div{id: "helper-info", class: "alert alert-info tiny-margins", role: "alert"}
    Choose 
    %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18} 
    collected, 
    %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
    identified, or Both to claim specimens mistakenly marked as "Not me"

  = haml :'partials/tables/ignored', layout: false