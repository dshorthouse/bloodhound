-content_for :title do
  #{@admin_user.fullname} Specimens

-content_for :scripts do
  %script{src:"/js/application.js"}
  :javascript
    $(function() {
        Application.init(#{@admin_user.id}, "PUT", "/admin");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning"}
    %div{class:"row"}
      %div{class:"col-12 col-lg-4 alert-warning mb-2"}
        %h3{class:"display-6"}= @admin_user.fullname
      %div{class:"col-12 col-lg-8"}
        = haml :'partials/admin_user_tabs', layout: false, locals: { active_page: "specimens" }

- if @results.empty?
  %div{class: "alert alert-warning", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Specimens have not yet been claimed.

- else
  %div{class: "alert alert-info row", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    %div{class: "col col-9"}
      #{@admin_user.fullname} has claimed #{number_with_delimiter(@total)} specimens.
      Choose 
      %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18} 
      collected, 
      %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
      identified, or Both.
    %div{class: "col col-3 text-right"}
      %a{href: "/admin/user/#{@admin_user.identifier}/specimens.csv"}
        %img{src: "/images/csv-icon.png", width:24, alt: "CSV download", style:"margin-right:0.5rem"}
      %a{href: "/admin/user/#{@admin_user.identifier}/specimens.json"}
        %img{src: "/images/json-icon.png", width:24, alt: "JSON download"}

  %div{class:"table-responsive-lg"}
    %table{class:"table table-hover table-sm"}
      %thead{class: "thead-light"}
        %tr
          %th{scope: "col", class:"selector"}
            = haml :'partials/bulk_selector_top', layout: false
          %th{scope: "col"} Scientific Name
          %th{scope: "col"} Collected By
          %th{scope: "col"} Identified By
          %th{scope: "col"} Date Collected
          %th{scope: "col"} Date Identified
          %th{scope: "col"} Institution
          %th{scope: "col"} Catalog Number
          %th{scope: "col"} Type Status
          %th{scope: "col", class:"btn-selector"}

      %tbody
        - @results.each do |uo|
          - o = uo.occurrence
          %tr
            %td{class: "selector"}
              = haml :'partials/single_selector_preselected', layout: false, locals: { occurrence: uo }
            %td
              - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
              %a{href: "https://www.gbif.org/occurrence/#{o.gbifID}", target: "_blank" } #{scientific_name}
            %td #{o.recordedBy}
            %td #{o.identifiedBy}
            %td #{o.eventDate || o.year}
            %td #{o.dateIdentified}
            %td #{o.institutionCode}
            %td #{o.catalogNumber}
            %td #{o.typeStatus}
            %td
              %button{type:"button", class:"btn btn-sm btn-danger remove", "data-occurrence-id":"#{uo.user_occurrence_id}"} Remove

      - if @total > 25
        %tfoot{class: "thead-light"}
          %tr
            %th{scope: "col", class:"selector"}
              = haml :'partials/bulk_selector_bottom', layout: false
            %th{scope: "col"} Scientific Name
            %th{scope: "col"} Collected By
            %th{scope: "col"} Identified By
            %th{scope: "col"} Date Collected
            %th{scope: "col"} Date Identified
            %th{scope: "col"} Institution
            %th{scope: "col"} Catalog Number
            %th{scope: "col"} Type Status
            %th{scope: "col"}

  - if @total > 25
    = haml :'partials/page_size', layout: false

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
