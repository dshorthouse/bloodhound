-content_for :title do
  #{@admin_user.fullname} Citations

-content_for :scripts do
  %script{src:"/js/application.js"}
  :javascript
    $(function() {
        Application.init(#{@admin_user.id}, "PUT", "/admin");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning"}
    %div{class:"row"}
      %div{class:"col-12 col-lg-4 alert-warning mb-2"}
        %h3{class:"display-6"}= @admin_user.fullname
      %div{class:"col-12 col-lg-8"}
        = haml :'partials/admin_user_tabs', layout: false, locals: { active_page: "citations" }

- if @results.empty?
  %div{class: "alert alert-warning", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Publications that made use of #{@admin_user.fullname}'s specimen data have not yet been recorded by the Global Biodiversity Information Facility (GBIF).
- else
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    At least #{number_with_delimiter(@total)} #{'publication'.pluralize(@total)} used specimen records within downloads recorded by the Global Biodiversity Information Facility (GBIF).

  %div{class:"citation-wrapper"}
    %h3 Specimen Data Used in Published Research
    - @results.each do |article|
      %div{class: "card"}
        %div{class: "card-header"}
          %p{class: "citation card-title"}
            #{article.citation}
        %div{class: "card-body"}
          %dl{class: "row"}
            %dt{class: "col-sm-2"} DOI
            %dd{class: "col-sm-10"}
              %a{href: "https://doi.org/#{article.doi}"} #{article.doi}
            %dt{class: "col-sm-2"} Abstract:
            %dd{class: "col-sm-10 text-muted"} #{article.abstract}
            %dt{class: "col-sm-2"} Specimens used:
            %dd{class: "col-sm-10"}
              %span{class: "badge badge-success badge-pill citation-correction"} #{number_with_delimiter(article.user_specimen_count(@admin_user.id))}
              %a{href: "/admin/user/#{@admin_user.identifier}/citation/#{article.id}"} View
            %dt{class: "col-sm-2"} All data in study:
            %dd{class: "col-sm-10"}
              - article.gbif_dois.each do |doi|
                %a{href: "https://doi.org/#{doi}", class: "badge badge-light citation-correction"} #{doi}

    = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1