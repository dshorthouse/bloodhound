-content_for :title do
  Search Accounts

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid alert-warning d-flex flex-wrap"}
    %div{class:"mr-auto"}
      %h2 Search Accounts
    = haml :'partials/admin_user_search', layout: false

- if @results.empty?
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    No users found.
- else
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    #{@pagy.count} search results for
    %span{class: "font-weight-bold"} #{h(params[:q])}

  - @results.in_groups_of(3).each do |group|
    %div{class: "card-deck"}
      - group.each do |user|
        - if user.nil?
          %div{class:"card", style:"border:0px"}
        - else
          = haml :'partials/user_card_dynamic', layout: false, locals: { user: User.find(user[:_id]), path: "admin/user" }

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1