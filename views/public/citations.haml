- content_for(:title, "#{@viewed_user.fullname}")

- content_for :scripts do
  %script{id:"dsq-count-scr", src:"//#{Sinatra::Application.settings.disqus_shortname}.disqus.com/count.js"}
  :javascript
    $(function() {
      DISQUSWIDGETS.getCount({ reset: true });
    });

%div{class:"container-fluid"}
  %div{class:"row"}
    = haml :'partials/user_jumbotron', layout: false
    %div{class:"col-12 col-lg-8 mt-2"}
      - if @viewed_user.is_public?
        = haml :'partials/user_tabs', layout: false, locals: { active_page: "citations" }

        - if @results.empty?
          %div{class: "alert alert-warning", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
            Publications that used #{@viewed_user.given}'s specimen data have not yet been recorded by the Global Biodiversity Information Facility (GBIF).
        - else
          %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
            #{number_with_delimiter(@pagy.count)} #{'publication'.pluralize(@pagy.count)} used #{@viewed_user.given}'s specimen data from the Global Biodiversity Information Facility (GBIF).

          %div{class:"citation-wrapper"}
            %h4 Science Enabled by Specimen Data
            - @results.each do |article|
              %div{class: "card"}
                %div{class: "card-header"}
                  %p{class: "citation card-title"}
                    #{article.citation}
                    %a{href: "https://doi.org/#{article.doi}"} https://doi.org/#{article.doi}
                %div{class: "card-body"}
                  %p{class:"card-text text-muted",style:"margin-top:5px;"} #{article.abstract}
                  %div{class: "small"}
                    %span{class: "badge badge-success badge-pill citation-correction"} #{number_with_delimiter(article.user_specimen_count(@viewed_user.id))}
                    %a{href: "/#{@viewed_user.identifier}/citation/#{article.id}"} #{'specimen'.pluralize(article.user_specimen_count(@viewed_user.id))}

          = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1