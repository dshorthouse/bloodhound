= haml :'partials/user_twitter_img', layout: false

- content_for(:title, "#{@viewed_user.fullname}")

- content_for :scripts do
  %script{id:"dsq-count-scr", src:"//#{Settings.disqus_shortname}.disqus.com/count.js", defer: ""}
  %script{src: "https://d1bxh8uas1mnw7.cloudfront.net/assets/embed.js"}
  :javascript
    $(function() {
      DISQUSWIDGETS.getCount({ reset: true });
    });

%div{class:"row"}
  = haml :'partials/user_jumbotron', layout: false
  %div{class:"col-12 col-lg-8 mt-2"}
    - if @viewed_user.is_public?
      = haml :'partials/user_tabs', layout: false, locals: { active_page: "citations" }

      - if @results.empty?
        %div{class: "alert alert-info tiny-margins", role: "alert"}
          Publications have not yet been recorded by the Global Biodiversity Information Facility (GBIF).
      - else
        %div{class: "alert alert-info tiny-margins", role: "alert"}
          #{number_with_delimiter(@pagy.count)} #{'publication'.pluralize(@pagy.count)} used specimen data from the Global Biodiversity Information Facility (GBIF).

        %div{class:"citation-wrapper"}
          %h4 Science Enabled by Specimen Data
          - @results.each do |article|
            %div{class: "card"}
              %div{class: "card-header"}
                %p{class: "citation card-title"}
                  #{h(article.citation)}
                  %a{href: "https://doi.org/#{article.doi}"} https://doi.org/#{article.doi}
              %div{class: "card-body"}
                %div{"data-badge-popover":"right", "data-badge-type":"donut", "data-doi":"#{article.doi}", "data-hide-no-mentions":"true", class:"altmetric-embed pull-left mr-2 float-left"}
                %p{class:"card-text text-muted"} #{h(article.abstract)}
              %div{class: "card-footer d-flex"}
                %div{class: "small"}
                  %span{class: "badge badge-success badge-pill citation-correction"} #{number_with_delimiter(article.user_specimen_count(@viewed_user.id))}
                  %a{href: "/#{@viewed_user.identifier}/citation/#{article.id}"} #{'specimen'.pluralize(article.user_specimen_count(@viewed_user.id))}

        = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1

    - else
      %div{class: "alert alert-warning"}
        - specimen_count = @viewed_user.all_occurrences_count
        - if specimen_count > 0
          %i{class:"fas fa-lock"}
          Although #{number_with_delimiter(specimen_count)} #{'specimen'.pluralize(specimen_count)} were claimed, this profile
        - else
          %i{class:"fas fa-lock"}
          Profile
        is not publicly available.