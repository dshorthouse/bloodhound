- content_for(:title, "#{@viewed_user.fullname} : Bloodhound")

- content_for :jumbotron do
  = haml :'partials/user_jumbotron', layout: false

= haml :'partials/user_tabs', layout: false, locals: { active_page: 'citations' }

- if @results.empty?
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Publications that made use of #{@viewed_user.fullname}'s specimen data have not yet been recorded by the Global Biodiversity Information Facility (GBIF).
- else
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    #{number_with_delimiter(@results.total_entries)} #{'publication'.pluralize(@results.total_entries)} made use of #{@viewed_user.fullname}'s specimen data downloaded from the Global Biodiversity Information Facility (GBIF).

  %div{class:"citation-wrapper"}
    %h3 Specimen Data Used
    - @results.each do |article|
      %div{class: "card"}
        %div{class: "card-header"}
          %p{class: "citation card-title"}
            #{article.citation}
            %a{href: "https://doi.org/#{article.doi}"} https://doi.org/#{article.doi}
        %div{class: "card-body"}
          %p{class:"card-text",style:"margin-top:5px;"} #{article.abstract}
          %div{class: "small"}
            %span{class: "badge badge-success badge-pill citation-correction"} #{number_with_delimiter(article.user_specimen_count(@viewed_user.id))}
            %a{href: "/#{@viewed_user.identifier}/citation/#{article.id}"} #{'specimen'.pluralize(article.user_specimen_count(@viewed_user.id))}

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1