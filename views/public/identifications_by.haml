= haml :'partials/user_twitter_img', layout: false

- content_for(:title, "#{@viewed_user.fullname}")

- content_for :scripts do
  %script{id:"dsq-count-scr", src:"//#{Settings.disqus_shortname}.disqus.com/count.js"}
  :javascript
    $(function() {
      DISQUSWIDGETS.getCount({ reset: true });
    });

%div{class:"container-fluid"}
  %div{class:"row"}
    = haml :'partials/user_jumbotron', layout: false
    %div{class:"col-12 col-lg-8 mt-2"}
      - if @viewed_user.is_public?
        = haml :'partials/user_tabs', layout: false, locals: { active_page: "network" }

        %div{class:"container-fluid"}
          %nav{id:"network-nav", class:"navbar navbar-light navbar-expand bg-light"}
            %ul{class:"navbar-nav"}
              %li{class:"nav-item"}
                %a{class:"nav-link#{locals[:active_tab] == "co_collectors" ? " active" : nil}", href:"/#{@viewed_user.identifier}/co-collectors"} Co-collectors
              %li{class:"nav-item"}
                %a{class:"nav-link#{locals[:active_tab] == "identified_for" ? " active" : nil}", href:"/#{@viewed_user.identifier}/identified-for"} Identified For
              %li{class:"nav-item"}
                %a{class:"nav-link#{locals[:active_tab] == "identifications_by" ? " active" : nil}", href:"/#{@viewed_user.identifier}/identifications-by"} Identifications By

        - if @results.empty?
          %div{class: "alert alert-info tiny-margins", role: "alert"}
            Identifications made to collected specimens have not yet been recorded.
        - else
          %div{class: "alert alert-info tiny-margins", role: "alert"}
            Has collected specimens later identified by:

          %div{class:"container-fluid"}
            - @results.in_groups_of(2).each do |group|
              %div{class: "card-deck"}
                - group.each do |u|
                  - if u.nil?
                    %div{class:"card", style:"border:0px"}
                  - else
                    - cache_fragment(u.identifier) do
                      = haml :'partials/user_card', layout: false, locals: { user: u }

          = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1