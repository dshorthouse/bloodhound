= haml :'partials/user/twitter_img', layout: false

- content_for(:title, "#{@viewed_user.fullname}")

- content_for :scripts do
  %script{id:"dsq-count-scr", src:"//#{Settings.disqus_shortname}.disqus.com/count.js", defer: ""}
  :javascript
    $(function() {
      DISQUSWIDGETS.getCount({ reset: true });
    });

%div{class:"row"}
  = haml :'partials/user/jumbotron', layout: false
  %div{class:"col-12 col-lg-8 mt-2"}
    - if @viewed_user.is_public?
      = haml :'partials/user/tabs', layout: false, locals: { active_page: "specimens" }

      - if !@country.nil?
        %div{class: "alert alert-warning", role: "alert"}
          %i{class:"fas fa-filter"}
          Filtered by
          = succeed "." do
            %span{class:"font-weight-bold"}
              #{@country.name}
          %a{href: "/#{@viewed_user.identifier}/specimens"}
            Remove

      - if @pagy.count == 0
        %div{class: "alert alert-info tiny-margins", role: "alert"}
          - claim_type = @viewed_user.orcid ? "claimed" : "attributed"
          Specimens have not yet been #{claim_type}.

      - else
        %div{class: "alert alert-info row tiny-margins", role: "alert", style:"padding-left:0.1em;padding-right:0.1em"}
          %div{class: "col col-9"}
            %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
            collected or
            %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
            identified #{number_with_delimiter(@pagy.count)} #{'specimen'.pluralize(@pagy.count)}. Not all available columns are shown.
          %div{class: "col col-3 text-right"}
            %a{href: "/#{@viewed_user.identifier}/specimens.csv", class:"mr-2"}
              %i{class:"fas fa-file-csv text-dark h5 m-0 p-1"}
              CSV
            %a{href: "/#{@viewed_user.identifier}/specimens.json"}
              %i{class:"fas fa-file-code text-dark h5 m-0 p-1"}
              JSON-LD

        %div{class:"table-responsive-lg"}
          %table{class:"table table-hover table-sm"}
            %thead{class: "thead-light"}
              %tr
                %th{scope: "col", style:"min-width:65px"}
                %th{scope: "col"} Scientific Name
                %th{scope: "col"} Collected By
                %th{scope: "col"} Identified By
                %th{scope: "col"} Date Collected
                %th{scope: "col"} Date Identified
                %th{scope: "col"} Institution
                %th{scope: "col"} Catalog Number
                %th{scope: "col"} Type Status

            %tbody
              - @results.each do |uo|
                - o = uo.occurrence
                %tr
                  %td
                    - if uo.action == "recorded"
                      %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
                    - elsif uo.action == "identified"
                      %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
                    - else
                      %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
                      %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
                  %td
                    - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
                    %a{href: "https://gbif.org/occurrence/#{o.id}", target:"_blank"} #{h(scientific_name)}
                  %td #{h(o.recordedBy)}
                  %td #{h(o.identifiedBy)}
                  %td #{h(o.eventDate || o.year)}
                  %td #{h(o.dateIdentified)}
                  %td #{h(o.institutionCode)}
                  %td #{h(o.catalogNumber)}
                  %td #{h(o.typeStatus)}

        = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1

    - else
      = haml :'partials/user/offline_message', layout: false
