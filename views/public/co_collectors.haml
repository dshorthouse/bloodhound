- content_for(:title, "#{@viewed_user.fullname} : Bloodhound")

- content_for :scripts do
  %script{id:"dsq-count-scr", src:"//#{Sinatra::Application.settings.disqus_shortname}.disqus.com/count.js"}
  :javascript
    $(function() {
      DISQUSWIDGETS.getCount({reset: true});
    });

- content_for :jumbotron do
  = haml :'partials/user_jumbotron', layout: false

= haml :'partials/user_tabs', layout: false, locals: { active_page: 'co_collectors' }

- if @results.empty?
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Co-collectors have not yet been recorded.
- else
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    Collected with the following individual(s).
    
  %div{class:"container-fluid"}
    - @results.in_groups_of(3).each do |group|
      %div{class: "row"}
        - group.each do |u|
          %div{class: "col-sm"}
            - if !u.nil?
              - cache_fragment(u.identifier) do
                = haml :'partials/user_card', layout: false, locals: { user: u }

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1