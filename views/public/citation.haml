= haml :'partials/user_twitter_img', layout: false

- content_for(:title, "#{@viewed_user.fullname}")

- content_for :scripts do
  %script{id:"dsq-count-scr", src:"//#{settings.disqus_shortname}.disqus.com/count.js"}
  :javascript
    $(function() {
      DISQUSWIDGETS.getCount({ reset: true });
    });

%div{class:"container-fluid"}
  %div{class:"row"}
    = haml :'partials/user_jumbotron', layout: false
    %div{class:"col-12 col-lg-8 mt-2"}
      - if @viewed_user.is_public?
        = haml :'partials/user_tabs', layout: false, locals: { active_page: "citations" }

        - if @results.empty?
          %div{class: "alert alert-info row tiny-margins", role: "alert"}
            Specimens have not been cited for this research article.

        - if !@results.empty?
          %div{class: "alert alert-info tiny-margins", role: "alert"}
            %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18} 
              collected
            %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
              identified

          %h4 Specimen Data Used In
          %p{class: "citation"}
            #{@article.citation}
            %a{href: "https://doi.org/#{@article.doi}"} https://doi.org/#{@article.doi}

          %div{class:"table-responsive-lg"}
            %table{class:"table table-hover table-sm"}
              %thead{class: "thead-light"}
                %tr
                  %th{scope: "col", style:"min-width:65px"}
                  %th{scope: "col"} Scientific Name
                  %th{scope: "col"} Collected By
                  %th{scope: "col"} Identified By
                  %th{scope: "col"} Date Collected
                  %th{scope: "col"} Date Identified
                  %th{scope: "col"} Institution
                  %th{scope: "col"} Catalog Number
                  %th{scope: "col"} Type Status

              %tbody
                - @results.each do |uo|
                  - o = uo.occurrence
                  %tr
                    %td
                      - if uo.action == "recorded"
                        %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
                      - elsif uo.action == "identified"
                        %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
                      - else
                        %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
                        %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
                    %td
                      - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
                      %a{href: "https://www.gbif.org/occurrence/#{o.id}", target: "_blank" } #{h(scientific_name)}
                    %td #{h(o.recordedBy)}
                    %td #{h(o.identifiedBy)}
                    %td #{h(o.eventDate || o.year)}
                    %td #{h(o.dateIdentified)}
                    %td #{h(o.institutionCode)}
                    %td #{h(o.catalogNumber)}
                    %td #{h(o.typeStatus)}

          = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1