-content_for :title do
  Bloodhound: Profiles

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h2 Public Profiles
      %p.lead.text-muted
        Users who have claimed their specimens and have made their profiles accessible to all

%div{class:"container-fluid"}
  - @results.in_groups_of(3).each do |group|
    %div{class: "row"}
      - group.each do |u|
        %div{class: "col-sm"}
          - if !u.nil?
            - cache_fragment(u.orcid) do
              = haml :'partials/user_card', layout: false, locals: { user: u }

  = will_paginate @results, { class: "pagination" }