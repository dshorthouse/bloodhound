-content_for :title do
  #{@country.name}

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h2 #{@country.name}
      %p.lead.text-muted
        From countries stated in
        %a{href:"https://orcid.org"} ORCID
        accounts

- if @results.empty?
  %div{class: "alert alert-danger", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    No one found from
    %span{class: "font-weight-bold"} #{@country.name}

- else
  %div{class:"container-fluid"}
    - @results.in_groups_of(3).each do |group|
      %div{class: "row"}
        - group.each do |u|
          %div{class: "col-sm"}
            - if !u.nil?
              - cache_fragment(u.identifier) do
                = haml :'partials/user_card', layout: false, locals: { user: u }

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1