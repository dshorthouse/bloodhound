-content_for :title do
  Articles

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h1{class:"h2"} Articles
      %p.lead.text-muted
        #{number_with_delimiter(Article.count)} articles with cited downloads from the Global Biodiversity Information Facility (GBIF)
    = haml :'partials/article/search', layout: false

- @results.in_groups_of(3).each do |group|
  %div{class: "card-deck"}
    - group.each do |article|
      - if article.nil?
        %div{class:"card", style:"border:0px"}
      - else
        %div{class: "card card-profile m-3"}
          %div{class: "card-header"}
            %h5
              %a{href: "/article/#{article.doi}"} #{article.citation}
            %p{class:"text-muted"}
          %div{class: "card-body"}

          %div{class: "card-footer"}
            %div{class: "col small text-left text-muted"}
            %div{class: "col small text-right text-muted"}

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
