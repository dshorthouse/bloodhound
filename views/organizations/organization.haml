-content_for :title do
  #{@organization.name}: Bloodhound

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid"}
    %div{class: "container-fluid"}
      %h2 #{@organization.name}
      %p{class:"text-muted"} #{@organization.address}

%div{class:"container-fluid"}
  %ul{class: "nav nav-tabs"}
    %li{class: "nav-item"}
      %a{class: "nav-link#{locals[:active_tab] == "organization-current" ? " active" : nil}", href: "/organization/#{@organization.identifier}"} Current
    %li{class: "nav-item"}
      %a{class: "nav-link#{locals[:active_tab] == "organization-past" ? " active" : nil}", href: "/organization/#{@organization.identifier}/past"} Previous

  - if @results.empty?
    %div{class: "alert alert-info row", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
      Previous members of #{@organization.name} have not yet been recorded.
  - else
    - @results.in_groups_of(3).each do |group|
      %div{class: "row"}
        - group.each do |u|
          %div{class: "col-sm"}
            - if !u.nil?
              - cache_fragment(u.orcid) do
                = haml :'partials/user_card', layout: false, locals: { user: u }

    = will_paginate @results, { class: "pagination" }