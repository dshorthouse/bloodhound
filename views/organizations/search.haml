-content_for :title do
  Organizations

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h2 Organizations
      %p.lead.text-muted
        From employment and academic records in
        %a{href: "https://orcid.org/"} ORCID
        accounts
    = haml :'partials/organization_search', layout: false

- if @results.empty?
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    No organizations found for 
    %span{class: "font-weight-bold"}
      :escaped
        #{params[:q]}
- else
  %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
    #{@pagy.count} search results for
    %span{class: "font-weight-bold"}
      :escaped
        #{params[:q]}

  - @results.in_groups_of(3).each do |group|
    %div{class: "card-deck"}
      - group.each do |o|
        - if o.nil?
          %div{class:"card", style:"border:0px"}
        - else
          - org = Organization.find(o[:_id].to_i)
          - if !o.nil?
            %div{class: "card m-3"}
              %h5{class: "card-header"}
                - if org.image_url
                  %img{src:"#{organization_image(org, 'medium')}", alt:"#{org.name}", class:"mr-2 rounded float-left"}
                %span{class:"clearfix"}
                  %a{href: "/organization/#{org.identifier}"} #{org.name}
              %div{class: "card-body"}
                %p{class:"text-muted"} #{org.address}
              %div{class: "card-footer"}
                %div{class: "col small text-left text-muted"}
                %div{class: "col small text-right text-muted"}
                  - count = org.active_users.count
                  - color = count == 0 ? "light" : "success"
                  %span{class:"badge badge-#{color}"} #{number_with_delimiter(count)}
                  #{'member'.pluralize(count)}

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1