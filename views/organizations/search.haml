-content_for :title do
  = I18n.t('organization.organization_title')

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h1{class:"h2"}= I18n.t('organization.organization_title')
      %p{class:"lead text-muted"}= I18n.t('organization.lede', count: number_with_delimiter(Organization.active_user_organizations.count))

    = haml :'partials/organization/search', layout: false

- if @pagy && @pagy.count == 0
  %div{class: "alert alert-warning tiny-margins", role: "alert"}= I18n.t('organization.no_search_alert', searched: h(params[:q]))
- elsif @pagy && @pagy.count > 0
  %div{class: "alert alert-info tiny-margins", role: "alert"}= I18n.t('organization.search_alert', searched: h(params[:q]), count: @pagy.count)

  - @results.in_groups_of(3).each do |group|
    %div{class: "card-deck"}
      - group.each do |o|
        - if o.nil?
          %div{class:"card border-0"}
        - else
          - org = Organization.find(o[:_id].to_i)
          - if !o.nil?
            %div{class: "card card-profile m-3"}
              - if org.image_url
                %div{class: "card-header d-flex"}
                  %div
                    %img{src:"#{organization_image(org, 'medium')}", alt:"#{org.name}", class:"mr-2 rounded"}
                  %div{class:"flex-grow-1"}
                    %h5
                      %a{href: "/organization/#{org.identifier}"} #{org.name}
                    %p{class:"text-muted"} #{org.address}
              - else
                %div{class: "card-header"}
                  %h5
                    %a{href: "/organization/#{org.identifier}"} #{org.name}
                  %p{class:"text-muted"} #{org.address}
              %div{class: "card-body"}

              %div{class: "card-footer"}
                %div{class: "col small text-left text-muted"}
                %div{class: "col small text-right text-muted"}
                  - count = org.active_users.count
                  %span{class:"badge badge-light"} #{number_with_delimiter(count)}
                  #{'member'.pluralize(count)}

  - if @pagy.pages > 1
    %div{style:"overflow-y:scroll"}
      = pagy_bootstrap_nav(@pagy)
