-content_for :title do
  #{@organization.name}

-content_for :stylesheets do
  - if @organization.latitude
    %link{href: "https://unpkg.com/leaflet@1.4.0/dist/leaflet.css", rel: "stylesheet", type: "text/css"}

-content_for :scripts do
  = haml :'partials/organization_jumbotron_scripts', layout:false

%div{class:"row"}
  = haml :'partials/organization_jumbotron', layout:false

  %div{class:"col-12 col-lg-8 mt-2"}
    = haml :'partials/organization_tabs', layout:false, locals: { active_tab: 'organization-metrics' }

    %h3{class:"mt-3"} Impact on Activities in Other Organizations

    - if @others_recorded.empty? && @others_identified.empty? && @year.nil?
      %div{class: "alert alert-info tiny-margins", role: "alert"}
        Current and previous personnel have not yet claimed specimens now curated at other organizations that they collected or identified while affiliated with #{@organization.name}.

    - else

      %div{class: "alert alert-info tiny-margins", role: "alert"}
        Current and previous personnel have claimed specimens now curated at the following organizations that they collected or identified while affiliated with #{@organization.name}.

      %div{class:"dropdown"}
        %button{class:"btn btn-info btn-secondary dropdown-toggle", type:"button", id:"dropdownMenuButton", "data-toggle":"dropdown", "aria-haspopup":"true", "aria-expanded":"false"}
          - if Organization::METRICS_YEAR_RANGE.to_a.include?(@year.to_i)
            #{@year}
          - else
            All Years
        %div{class:"dropdown-menu", "aria-labelledby":"dropdownMenuButton"}
          %a{class:"dropdown-item", href:"?year="} All years
          - Organization::METRICS_YEAR_RANGE.each do |y|
            %a{class:"dropdown-item", href:"?year=#{y}"} #{y}

        - if @others_recorded.empty? && @others_identified.empty?
          %p{class:"mt-3"} Specimens collected or identified in #{@year} by personnel and curated elsewhere have not yet been claimed.

        %div{class: "row"}
          %div{class: "col"}
            - if @others_recorded.empty? && !@others_identified.empty?
              %h4{class: "d-flex justify-content-between list-header"} Specimens Identified
              %div{class: "d-flex justify-content-between list-header h5"}
                %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.count)} #{'organization'.pluralize(@others_identified.count)}
                %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.values.inject(0){|sum,x| sum + x })} specimens
              %ul{class: "list-group"}
                - @others_identified.each do |k,v|
                  %li{class: "list-group-item d-flex justify-content-between align-items-center"}
                    #{k}
                    %span{class: "badge badge-success badge-pill"} #{number_with_delimiter(v)}
            - elsif !@others_recorded.empty?
              %h4{class: "d-flex justify-content-between list-header"} Specimens Collected
              %div{class: "d-flex justify-content-between list-header h5"}
                %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_recorded.count)} #{'organization'.pluralize(@others_recorded.count)}
                %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_recorded.values.inject(0){|sum,x| sum + x })} specimens
              %ul{class: "list-group"}
                - @others_recorded.each do |k,v|
                  %li{class: "list-group-item d-flex justify-content-between align-items-center"}
                    #{k}
                    %span{class: "badge badge-success badge-pill"} #{number_with_delimiter(v)}
          %div{class: "col"}
            - if !@others_recorded.empty? && !@others_identified.empty?
              %h4{class: "d-flex justify-content-between list-header"} Specimens Identified
              %div{class: "d-flex justify-content-between list-header h5"}
                %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.count)} #{'organization'.pluralize(@others_identified.count)}
                %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.values.inject(0){|sum,x| sum + x })} specimens
              %ul{class: "list-group"}
                - @others_identified.each do |k,v|
                  %li{class: "list-group-item d-flex justify-content-between align-items-center"}
                    #{k}
                    %span{class: "badge badge-success badge-pill"} #{number_with_delimiter(v)}
