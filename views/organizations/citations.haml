-content_for :title do
  #{@organization.name}

-content_for :stylesheets do
  - if @organization.latitude
    %link{href: "https://unpkg.com/leaflet@1.4.0/dist/leaflet.css", rel: "stylesheet", type: "text/css"}

-content_for :scripts do
  %script{src: "/js/application.js"}
  - if @organization.latitude
    %script{src: "https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"}
    :javascript
      $(function() {
        var mymap = L.map('mapid').setView([#{@organization.latitude}, #{@organization.longitude}], 13);
        L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoiZHNob3J0aG91c2UiLCJhIjoiY2p1aG81cDZ0MGpscTRkcG5rMjdoOWNkeCJ9.yRdxFszrFvljWz6GbdinTA', {
          maxZoom: 18,
          attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
          '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
          'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
          id: 'mapbox.streets'
        }).addTo(mymap);

        L.marker([#{@organization.latitude}, #{@organization.longitude}]).addTo(mymap).bindPopup("<b>#{@organization.name}</b>");
      });
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  = haml :'partials/organization_jumbotron', layout:false

%div{class:"container-fluid"}
  = haml :'partials/organization_tabs', layout:false, locals: { active_tab: 'organization-articles' }

  %h3{class:"mt-3"} Science Enabled Through Specimens Collected or Identified by Personnel

  - if @results.empty?
    %div{class: "alert alert-warning", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
      Publications based on specimens collected or identified by current and previous personnel have not yet been recorded by the Global Biodiversity Information Facility (GBIF).
  - else
    %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
      #{number_with_delimiter(@pagy.count)} #{'publication'.pluralize(@pagy.count)} used specimen data from the Global Biodiversity Information Facility (GBIF) based on specimens collected or identified by current and previous personnel.

    %div{class:"citation-wrapper"}
      - @articles.each do |article|
        %div{class: "card"}
          %div{class: "card-header"}
            %p{class: "citation card-title"}
              #{article.citation}
              %a{href: "https://doi.org/#{article.doi}"} https://doi.org/#{article.doi}
          %div{class: "card-body"}
            %p{class:"card-text text-muted",style:"margin-top:5px;"} #{article.abstract}
            %p
              Specimens collected or identified by: 
              - article.user_ids.split(",").each_with_index do |user_id, index|
                - user = User.find(user_id)
                %span
                  - if index != article.user_ids.split(",").size - 1
                    = succeed ", " do
                      %a{href: "/#{user.identifier}"} #{user.fullname}
                  - else
                    %a{href: "/#{user.identifier}"} #{user.fullname}

    = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1

