-content_for :title do
  #{@organization.name}

-content_for :stylesheets do
  - if @organization.latitude
    %link{href: "https://unpkg.com/leaflet@1.4.0/dist/leaflet.css", rel: "stylesheet", type: "text/css"}

-content_for :scripts do
  %script{src: "/js/application.js"}
  - if @organization.latitude
    %script{src: "https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"}
    :javascript
      $(function() {
        var mymap = L.map('mapid').setView([#{@organization.latitude}, #{@organization.longitude}], 13);
        L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoiZHNob3J0aG91c2UiLCJhIjoiY2p1aG81cDZ0MGpscTRkcG5rMjdoOWNkeCJ9.yRdxFszrFvljWz6GbdinTA', {
          maxZoom: 18,
          attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
          '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
          'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
          id: 'mapbox.streets'
        }).addTo(mymap);

        L.marker([#{@organization.latitude}, #{@organization.longitude}]).addTo(mymap).bindPopup("<b>#{@organization.name}</b>");
      });
  :javascript
    $(function() {
      Application.init();
    });

-content_for :jumbotron do
  = haml :'partials/organization_jumbotron', layout:false

%div{class:"container-fluid"}
  = haml :'partials/organization_tabs', layout:false, locals: { active_tab: 'organization-metrics' }

  %h3{class:"mt-3"} Impact on Activities in Other Organizations

  - if @others_recorded.empty? && @others_identified.empty? && @year.nil?
    %div{class: "alert alert-warning", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
      Past and present personnel have not yet claimed specimens that they collected or identified while affiliated with #{@organization.name} and that are now curated at other organizations.

  - else

    %div{class: "alert alert-info", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
      Past and present personnel have claimed specimens that they collected or identified while affiliated with #{@organization.name} and that are now curated at the following organizations.

    %div{class: "container-fluid"}

    %div{class:"dropdown"}
      %button{class:"btn btn-info btn-secondary dropdown-toggle", type:"button", id:"dropdownMenuButton", "data-toggle":"dropdown", "aria-haspopup":"true", "aria-expanded":"false"}
        - if Organization::METRICS_YEAR_RANGE.to_a.include?(@year.to_i)
          #{@year}
        - else
          All Years
      %div{class:"dropdown-menu", "aria-labelledby":"dropdownMenuButton"}
        %a{class:"dropdown-item", href:"?year="} All years
        - Organization::METRICS_YEAR_RANGE.each do |y|
          %a{class:"dropdown-item", href:"?year=#{y}"} #{y}

      - if @others_recorded.empty? && @others_identified.empty?
        %p{class:"mt-3"} No specimens collected or identified in #{@year} were claimed by personnel

      %div{class: "row"}
        %div{class: "col"}
          - if @others_recorded.empty? && !@others_identified.empty?
            %h4{class: "d-flex justify-content-between list-header"} Specimens Identified
            %div{class: "d-flex justify-content-between list-header h5"}
              %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.count)} #{'organization'.pluralize(@others_identified.count)}
              %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.values.inject(0){|sum,x| sum + x })} specimens
            %ul{class: "list-group"}
              - @others_identified.each do |k,v|
                %li{class: "list-group-item d-flex justify-content-between align-items-center"}
                  #{k}
                  %span{class: "badge badge-success badge-pill"} #{number_with_delimiter(v)}
          - elsif !@others_recorded.empty?
            %h4{class: "d-flex justify-content-between list-header"} Specimens Collected
            %div{class: "d-flex justify-content-between list-header h5"}
              %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_recorded.count)} #{'organization'.pluralize(@others_recorded.count)}
              %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_recorded.values.inject(0){|sum,x| sum + x })} specimens
            %ul{class: "list-group"}
              - @others_recorded.each do |k,v|
                %li{class: "list-group-item d-flex justify-content-between align-items-center"}
                  #{k}
                  %span{class: "badge badge-success badge-pill"} #{number_with_delimiter(v)}
        %div{class: "col"}
          - if !@others_recorded.empty? && !@others_identified.empty?
            %h4{class: "d-flex justify-content-between list-header"} Specimens Identified
            %div{class: "d-flex justify-content-between list-header h5"}
              %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.count)} #{'organization'.pluralize(@others_identified.count)}
              %span{class: "badge badge-light badge-secondary"} #{number_with_delimiter(@others_identified.values.inject(0){|sum,x| sum + x })} specimens
            %ul{class: "list-group"}
              - @others_identified.each do |k,v|
                %li{class: "list-group-item d-flex justify-content-between align-items-center"}
                  #{k}
                  %span{class: "badge badge-success badge-pill"} #{number_with_delimiter(v)}

