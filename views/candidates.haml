-content_for :title do
  Bloodhound::Candidate Specimens

-content_for :stylesheets do
  %link{href: "https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css", rel: "stylesheet", type: "text/css"}
  %link{href: "/css/typeahead.css", rel: "stylesheet", type: "text/css"}

-content_for :scripts do
  %script{src: "https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"}
  %script{src: "/js/typeahead.bundle.min.js"}
  %script{src: "/js/candidates.js"}
  :javascript
    $(function() {
      Candidates.init();
    });

%div{class:"container-fluid"}
  %div{class:"row"}
    %div{class:"col title-col"}
      %h2{class:"display-4 text-left"} Your Candidate Specimens
    %div{class:"col"}
      %form{id:"#form-wrapper", method: "get", action: "/", "accept-charset" => "UTF-8"}
        %div{class: "inputs search-agent float-right"}
          %label{for: "typeahead"}= "Search"
          %input.typeahead{id: "typeahead", type: :text, name: "q", placeholder: "Mary Smith", value: "#{params[:q]}", size: 30}

- if @results.empty?
  %p
    Bloodhound could not sniff any relevant specimens collected or identified by you and indexed by the 
    %a{href: "https://www.gbif.org"} Global Biodiversity Information Facility
    (GBIF).
- else
  %p
    Bloodhound sniffed #{number_with_delimiter(@total, delimeter: ",")} specimens indexed by the 
    %a{href: "https://www.gbif.org"} Global Biodiversity Information Facility
    you may have collected or identified. They are presented from greatest to least likely. Claim them as your own!
  %table{class:"table table-hover"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"}
          %input{type:"checkbox", name:"selection-all", class:"toggle", "data-toggle": "toggle", "data-onstyle":"success", "data-on": "Claimed", "data-off": "Claim All", "data-size":"small", "data-id":"#{@results.map{|o| o.id}.join(",")}"}
        %th{scope: "col"} Scientific Name
        %th{scope: "col"} Collectors
        %th{scope: "col"} Determiners
        %th{scope: "col"} Date Collected
        %th{scope: "col"} Date Identified
        %th{scope: "col"} Institution
        %th{scope: "col"} Type Status

    %tbody
      - @results.each do |o|
        %tr
          %td
            %input{type:"checkbox", name:"selection", class:"toggle", "data-toggle": "toggle", "data-onstyle":"success", "data-on": "Claimed", "data-off": "Claim", "data-size":"small", "data-id":"#{o.id}"}
          %td
            %a{href: "https://www.gbif.org/occurrence/#{o.gbifID}", target: "_blank"} #{o.scientificName}
          %td #{o.recordedBy}
          %td #{o.identifiedBy}
          %td #{o.eventDate}
          %td #{o.dateIdentified}
          %td #{o.institutionCode}
          %td #{o.typeStatus}

  = will_paginate @results, { class: "pagination" }