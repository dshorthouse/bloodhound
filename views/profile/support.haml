-content_for :title do
  Help Received

-content_for :scripts do
  %script{src:"/js/application.js"}
  :javascript
    $(function() {
        Application.init(#{@user[:id]}, "PUT", "/profile");
    });

%div{class:"row"}
  %div{class:"col-12 col-lg-4"}
    %h1{class:"h3"}= @user.fullname
  %div{class:"col-12 col-lg-8 mt-2"}
    = haml :'partials/profile_tabs', layout: false, locals: { active_page: "specimens" }
    = haml :'partials/profile_subtabs', layout: false, locals: { active_tab: "support"}

- if @results.empty?
  %div{class: "alert alert-info tiny-margins", role: "alert"}
    Bloodhound users have not yet helped you claim specimens.

- else
  %div{class: "alert alert-info row tiny-margins", role: "alert"}
    %div{class: "col col-12"}
      Choose
      %img{src:"/images/net-unselected.png", alt:"Collected", title:"Collected", width:18}
      collected,
      %img{src:"/images/microscope-unselected.png", alt:"Collected", title:"Collected", width:18}
      identified, or Both to
      %span{class:"font-weight-bold"} adjust what other users have helped you claim.
      Hover over their name to send thanks.

  %div{class:"table-responsive-lg"}
    %table{class:"table table-hover table-sm"}
      %thead{class: "thead-light"}
        %tr
          %th{scope: "col", class:"selector"}
            = haml :'partials/bulk_selector_top', layout: false
          %th{scope: "col"} Scientific Name
          %th{scope: "col"} Collected By
          %th{scope: "col"} Identified By
          %th{scope: "col"} Date Collected
          %th{scope: "col"} Date Identified
          %th{scope: "col"} Institution
          %th{scope: "col"} Catalog Number
          %th{scope: "col"} Type Status
          %th{scope: "col"} Trainer
          %th{scope: "col", class:"btn-selector-wide"}
          %th{scope: "col", class:"btn-selector"}

      %tbody
        - @results.each do |uo|
          - o = uo.occurrence
          %tr
            %td{class: "selector"}
              = haml :'partials/single_selector_preselected', layout: false, locals: { occurrence: uo }
            %td
              - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
              %a{href: "https://gbif.org/occurrence/#{o.id}", target:"_blank"} #{h(scientific_name)}
            %td #{h(o.recordedBy)}
            %td #{h(o.identifiedBy)}
            %td #{h(o.eventDate || o.year)}
            %td #{h(o.dateIdentified)}
            %td #{h(o.institutionCode)}
            %td #{h(o.catalogNumber)}
            %td #{h(o.typeStatus)}
            %td
              - if uo.claimant.is_bot?
                #{uo.claimant.fullname}
              - else
                %a{href: "/#{uo.claimant.orcid}"} #{uo.claimant.fullname_reverse}
            %td
              - if uo.message.nil?
                - if !uo.claimant.is_bot?
                  %button{type:"button", class:"btn btn-sm btn-outline-danger thanks", "data-recipient-identifier": uo.claimant.orcid, "data-occurrence-id": o.id}
                    %i{class:"fas fa-heart"}
                    Thanks
              - else
                %span{class:"btn btn-sm btn-outline-success disabled", disabled: true}
                  %i{class:"fas fa-check"}
                  Thanks
            %td
              %button{type:"button", class:"btn btn-sm btn-outline-warning hide", "data-occurrence-id":"#{uo.user_occurrence_id}"} Not me

      - if @total > 25
        %tfoot{class: "thead-light"}
          %tr
            %th{scope: "col", class:"selector"}
              = haml :'partials/bulk_selector_bottom', layout: false
            %th{scope: "col"} Scientific Name
            %th{scope: "col"} Collected By
            %th{scope: "col"} Identified By
            %th{scope: "col"} Date Collected
            %th{scope: "col"} Date Identified
            %th{scope: "col"} Institution
            %th{scope: "col"} Catalog Number
            %th{scope: "col"} Type Status
            %th{scope: "col"} Helper
            %th{scope: "col"}
            %th{scope: "col"}

  - if @total > 25
    = haml :'partials/page_size', layout: false

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
