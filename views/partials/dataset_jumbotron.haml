%div{class:"col-12 col-lg-4 text-center sidebar"}
  %h1{class:"mt-3 h2", itemprop: "name"} #{h(@dataset.title)}

  %p
    %a{href: "https://gbif.org/dataset/#{@dataset.datasetKey}"}
      https://gbif.org/dataset/#{@dataset.datasetKey}

  - if @dataset.image_url
    %div{class:"m-1"}
      %img{src:"https://abekpgaoen.cloudimg.io/fit/350x200/q100/#{@dataset.image_url}", class:"rounded mx-auto img-fluid", alt:"#{@dataset.title}"}

  - if @dataset.description
    %p{class:"text-muted text-left"}
      #{h(strip_tags(@dataset.description))}

  - if @dataset.license && @dataset.license_icon
    %p
      %a{href: "#{@dataset.license}"}
        %img{src:"#{@dataset.license_icon}"}

  - if @dataset.doi
    %p
      %a{href: "https://doi.org/#{@dataset.doi}"}
        %img{src:"https://zenodo.org/badge/DOI/#{@dataset.doi}.svg"}

  - if admin_authorized?
    %div{class:"mt-3 pt-3 border-top"}
      %a{href: "/admin/dataset/#{@dataset.datasetKey}"}
        %i{class:"fas fa-cog"}
        Settings
