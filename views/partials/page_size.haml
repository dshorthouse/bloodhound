%div{class: "btn-group", style:"margin-bottom:3px"}
  %button{class:"btn btn-light btn-sm dropdown-toggle", type:"button", "data-toggle":"dropdown", "aria-haspopup":"true", "aria-expanded":"false"} Per page
  %div{class:"dropdown-menu", "aria-labelledby":"dropdownMenuButton"}
    - relaxed = params[:relaxed] == "1" ? "&relaxed=1" : ""
    %a{href: "?page=#{@page}&per=25#{relaxed}", class: "dropdown-item"} 25
    %a{href: "?page=#{@page}&per=50#{relaxed}", class: "dropdown-item"} 50
    %a{href: "?page=#{@page}&per=100#{relaxed}", class: "dropdown-item"} 100
    %a{href: "?page=#{@page}&per=250#{relaxed}", class: "dropdown-item"} 250