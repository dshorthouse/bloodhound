%form{id:"form-org-wrapper", method: "get", action: "/organizations/search", "accept-charset" => "UTF-8", class: "form-inline helpers"}
  %div{class: "form-group row"}
    %div{class:"col-8"}
      %input{class:"typeahead organization-search", id:"typeahead-organization", type: :text, name: "q", placeholder: "Canadian Museum of Nature", value: "#{params[:q]}", size:"34"}
    %input{type: :submit, class:"btn btn-success", value:"Search"}