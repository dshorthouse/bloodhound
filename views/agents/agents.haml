-content_for :title do
  Agent Strings

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/agents");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h1{class:"h2"} Agent String Search
      %p.lead.text-muted
        #{number_with_delimiter(@count)} raw #{'string'.pluralize(@count)} from parsed collector and determiner names in specimen data from 
        %a{href:"https://gbif.org"} GBIF
    = haml :'partials/agent/search', layout: false

- if params[:q] && !params[:q].empty? && @formatted_results.empty?
  %div{class: "alert alert-warning tiny-margins mt-0", role: "alert"}
    No agent string found for
    %span{class: "font-weight-bold"} #{h(params[:q])}
- elsif @pagy && @pagy.count > 0
  %div{class: "alert alert-info tiny-margins mt-0", role: "alert"}
    #{@pagy.count} search results for
    %span{class: "font-weight-bold"} #{h(params[:q])}

  %div{class: "row"}
    - @formatted_results.in_groups_of(25, false).each do |group|
      %div{class: "col-12 col-md-3 mb-3"}
        %ul{class: "list-unstyled m-2"}
          - group.each do |o|
            %li
              %a{href: "/agent/#{o[:id]}"} #{o[:fullname_reverse]}

  - if @pagy.pages > 1
    %div{style:"overflow-y:scroll"}
      = pagy_bootstrap_nav(@pagy)

- else
  %div{class: "alert alert-warning tiny-margins mt-0", role: "alert"}
    %span{class:"font-weight-bold"} WARNING:
    Unlike all other URLs in this site, URLs for agent strings are unreliable for linking because they will point to different results every few weeks
