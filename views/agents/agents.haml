-content_for :title do
  Agents

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/agents");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h1{class:"h2"} Agent Search
      %p.lead.text-muted
        #{number_with_delimiter(@count)} unverified and unresolved names for people found in natural history specimen data
    = haml :'partials/agent_search', layout: false

- if params[:q] && !params[:q].empty? && @formatted_results.empty?
  %div{class: "alert alert-warning tiny-margins", role: "alert"}
    No agents found by the name
    %span{class: "font-weight-bold"} #{h(params[:q])}
- elsif !@formatted_results.empty?
  %ul{class: "list-unstyled"}
    - @formatted_results.each do |o|
      %li
        %a{href: "/agent/#{o[:id]}"} #{o[:fullname_reverse]}
        %small{class: "text-muted"} [Score: #{o[:score]}]

  = pagy_bootstrap_nav(@pagy) if @pagy.pages > 1