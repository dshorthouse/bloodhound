-content_for :title do
  Bloodhound: Agents

-content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init("", "GET", "/agents");
    });

-content_for :jumbotron do
  %div{class:"jumbotron jumbotron-fluid d-flex flex-wrap"}
    %div{class:"mr-auto p-2"}
      %h2 Agent Search
      %p.lead.text-muted
        #{number_with_delimiter(@count)} unauthenticated and unverified names for people found in specimen data
    = haml :'partials/agent_search', layout: false

%div{class:"container-fluid"}
  - if params[:q] && !params[:q].empty? && @formatted_results.empty?
    %div{class: "alert alert-danger", role: "alert", style:"margin-left:0.1em;margin-right:0.1em"}
      No agents found by the name
      %span{class: "font-weight-bold"}
        :escaped
          #{params[:q]}
  - elsif !@formatted_results.empty?
    %ul{class: "list-unstyled"}
      - @formatted_results.each do |o|
        %li
          %a{href: "/agent/#{o[:id]}"} #{o[:name]}
          %small{class: "text-muted"} [Score: #{o[:score]}]

    = will_paginate @results, { class: "pagination" }