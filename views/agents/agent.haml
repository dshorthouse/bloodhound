-content_for :title do
  #{@agent.fullname} Specimens

-content_for :jumbotron do
  = haml :'partials/agent/jumbotron', layout: false

%div{class: "alert alert-warning tiny-margins mt-0", role: "alert"}
  %span{class:"font-weight-bold"} WARNING:
  Unlike all other URLs in this site, URLs for agent strings are unreliable for linking because they will point to different results every few weeks

%div{class: "alert alert-info tiny-margins", role:"alert"}
  %div{class:"row"}
    %div{class: "col col-12 col-lg-10"}
      Sniffed #{number_with_delimiter(@pagy.count)} specimens for the string
      %span{class:"font-italic"}
        = succeed '.' do
          #{@agent.fullname}
      Not all columns are shown.
      - if authorized?
        Search for
        %a{href: "/help-others?q=#{@agent.fullname}"}
          %i{class:"fas fa-hands-helping"}
          #{@agent.fullname}
        the person and help attribute specimens.
    %div{class: "col col-12 col-lg-2 text-lg-right pr-3"}
      - if authorized?
        %a{href: "/agent/#{@agent.id}/specimens.csv"}
          %i{class:"fas fa-file-csv text-dark h5 m-0 p-1"}
          CSV

%div{class:"table-responsive-lg"}
  %table{class:"table table-hover table-sm"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"} Scientific Name
        %th{scope: "col"} Collected By
        %th{scope: "col"} Identified By
        %th{scope: "col"} Date Collected
        %th{scope: "col"} Date Identified
        %th{scope: "col"} Institution
        %th{scope: "col"} Catalog Number
        %th{scope: "col"} Type Status

    %tbody
      - @results.each do |o|
        %tr
          %td
            - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
            %a{href: "https://gbif.org/occurrence/#{o.id}", target:"_blank"}
              #{h(scientific_name)}
            - if o.hasImage?
              %i{class:"fas fa-image ml-1"}
          %td #{h(o.recordedBy)}
          %td #{h(o.identifiedBy)}
          %td #{h(o.eventDate || o.year)}
          %td #{h(o.dateIdentified)}
          %td #{h(o.institutionCode)}
          %td #{h(o.catalogNumber)}
          %td #{h(o.typeStatus)}

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
