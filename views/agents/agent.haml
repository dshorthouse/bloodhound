-content_for :title do
  #{@agent.fullname} Specimens

-content_for :jumbotron do
  = haml :'partials/agent/jumbotron', layout: false

%div{class: "alert alert-warning tiny-margins", role:"alert", style:"margin-top:0px;"}
  %div{class:"row"}
    %div{class: "col col-9"}
      Sniffed #{number_with_delimiter(@pagy.count)} specimens for #{@agent.fullname}. Not all available columns are shown.
      %br
      Because Bloodhound is always improving on its ability to find agents in specimen data, this URL is unreliable for linking.
      - if authorized?
        %br
        Search for
        %a{href: "/help-others?q=#{@agent.fullname}"}
          %i{class:"fas fa-hands-helping"}
          #{@agent.fullname}
        the person and help attribute specimens.
    %div{class: "col col-3 text-right pr-2"}
      - if !authorized?
        %a{ href:"/auth/orcid" }
          Login
        to download and attribute
      - else
        %a{href: "/agent/#{@agent.id}/specimens.csv"}
          %img{src: "/images/csv-icon.png", width:24, alt: "CSV download"}

%div{class:"table-responsive-lg"}
  %table{class:"table table-hover table-sm"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"} Scientific Name
        %th{scope: "col"} Collected By
        %th{scope: "col"} Identified By
        %th{scope: "col"} Date Collected
        %th{scope: "col"} Date Identified
        %th{scope: "col"} Institution
        %th{scope: "col"} Catalog Number
        %th{scope: "col"} Type Status

    %tbody
      - @results.each do |o|
        %tr
          %td
            - scientific_name = o.scientificName.nil? ? "not recorded" : o.scientificName
            %a{href: "https://gbif.org/occurrence/#{o.id}", target:"_blank"} #{h(scientific_name)}
          %td #{h(o.recordedBy)}
          %td #{h(o.identifiedBy)}
          %td #{h(o.eventDate || o.year)}
          %td #{h(o.dateIdentified)}
          %td #{h(o.institutionCode)}
          %td #{h(o.catalogNumber)}
          %td #{h(o.typeStatus)}

= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
