-content_for :title do
  Bloodhound::Claimed Specimens

-content_for :stylesheets do
  %link{href: "https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css", rel: "stylesheet", type: "text/css"}

-content_for :scripts do
  %script{src: "https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"}
  :javascript
    $(function() {
        $('input').change(function() {
            var id = $(this).attr("data-id");
            if($(this).attr("name") === "selection-all") {
                $.ajax({
                    method: "DELETE",
                    url: "/user-occurrence/bulk.json",
                    dataType: "json",
                    data: JSON.stringify({ ids: id })
                }).done(function(data) {
                    $('.table tbody tr').fadeOut(1000, function() {
                      $(this).remove();
                    });
                });
            } else {
                $(this).parent().parent().parent().fadeOut(1000, function() {
                    var row = $(this);
                    $.ajax({
                        method: "DELETE",
                        url: "/user-occurrence/" + id + ".json"
                    }).done(function(data) {
                        row.remove();
                    });
                });
            }
        });
    });

%h2{class:"display-4"} Your Claimed Specimens

- if authorized? && !@results.empty?
  %p
    Bloodhound is sniffing your 
    %span{id: "counter"}
      #{number_with_delimiter(@total, delimeter: ",")}
    specimens.
  %table{class:"table table-hover"}
    %thead{class: "thead-light"}
      %tr
        %th{scope: "col"}
          %input{type:"checkbox", name:"selection-all", "data-toggle": "toggle", "data-onstyle":"danger", "data-on": "Claimed", "data-off": "Unclaim All", "data-size":"small", "data-id":"#{@results.map{|o| o[:user_occurrence_id]}.join(",")}"}
        %th{scope: "col"} Scientific Name
        %th{scope: "col"} Collectors
        %th{scope: "col"} Determiners
        %th{scope: "col"} Date Collected
        %th{scope: "col"} Date Identified
        %th{scope: "col"} Institution
        %th{scope: "col"} Catalog Number
        %th{scope: "col"} Type Status
        %th{scope: "col"} Last Checked

    %tbody
      - @results.each do |o|
        %tr
          %td
            %input{type:"checkbox", name:"selection", "data-toggle": "toggle", "data-onstyle":"danger", "data-on": "Unclaimed", "data-off": "Unclaim", "data-size":"small", "data-id":"#{o[:user_occurrence_id]}"}
          %td
            %a{href: "https://www.gbif.org/occurrence/#{o[:gbifID]}" } #{o[:scientificName]}
          %td #{o[:recordedBy]}
          %td #{o[:identifiedBy]}
          %td #{o[:eventDate]}
          %td #{o[:dateIdentified]}
          %td #{o[:institutionCode]}
          %td #{o[:catalogNumber]}
          %td #{o[:typeStatus]}
          - last_checked = o[:lastChecked].nil? ? "Coming..." : o[:lastChecked]
          %td #{last_checked}

  = will_paginate @results, { class: "pagination" }
- elsif @results.empty?
  %p You have not yet claimed any specimens.